<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FlagsRally.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:FlagsRally"
    xmlns:views="clr-namespace:FlagsRally.Views"
    Title="FlagsRally"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Flags" Icon="flag.png">
            <ShellContent
                Title="Flags"
                ContentTemplate="{DataTemplate views:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Location" Icon="location.png">
            <ShellContent
                Title="Location"
                ContentTemplate="{DataTemplate views:LocationPage}"
                Route="Location" />
        </Tab>
        <Tab Title="Settings" Icon="settings.png">
            <ShellContent
                Title="Settings"
                ContentTemplate="{DataTemplate views:SettingPage}"
                Route="Settings" />
        </Tab>
    </TabBar>

</Shell>
